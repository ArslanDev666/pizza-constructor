{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "components/*": ["components/*"],
      "modules/*": ["modules/*"],
      "assets/*": ["assets/*"],
      "hooks/*": ["hooks/*"],
      "routes/*": ["routes/*"],
      "pages/*": ["pages/*"],
      "context/*": ["context/*"],
      "services/*": ["services/*"],
      "ts/*": ["ts/*"],
      "utils/*": ["utils/*"],
      "styles/*": ["styles/*"],
      "store/*": ["store/*"],
      "constants/*": ["constants/*"],
      "layouts/*": ["layouts/*"]
    }
  },

  "include": ["src"]
}
